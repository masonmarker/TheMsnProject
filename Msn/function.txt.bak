import bool;

s sparam1 = &;
s sparam2 = &;
i iparam1 = 0;

s f_ifelse_def = allows for efficient if-else logic control flow;
s f_ifelse_params = @iparam1 @sparam1 @sparam2;
f ifelse f_ifelse_def f_ifelse_params;
ifelse = {iparam1} run sparam1;
ifelse = not with iparam1;
ifelse = {ireturn} run sparam2;
end ifelse;

s f_run2_def = runs multiple functions in sequence;
s f_run2_params = @sparam1 @sparam2;
f run2 f_run2_def f_run2_params;
run2 = run sparam1;
run2 = run sparam2;
end run2; 


