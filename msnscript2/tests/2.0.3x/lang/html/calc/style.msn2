# Style for interface
#
# author : Mason Marker
# date : 6/27/2023

# style sheet
@ css = script(

    # broad styles
    body {
        # we use (,) to include a comma
        # when that comma doesn't exist
        # inside parentheses already
        font-family: 'Segoe UI'(,) Tahoma(,) Geneva(,) Verdana(,) sans-serif;
        font-size: 20px;

        # center everything vertically
        # and horizontally
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    # main title
    h1 {

    }

    # input field
    input {
        height: 50px;
        font-size: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
    }

    # result field
    .result {
        height: 50px;
        font-size: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
    }

    # enter expression <p>
    .enter {
        font-size: 20px;
        margin-top: 20px;
    }

    # submit button
    button {
        height: 50px;
        font-size: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
        background-color: #fff;
        cursor: pointer;
        margin-top: 1rem;
        transition: 0.2s;
    }

    # when we hover over the button
    button:hover {
        background-color: #eee;
    }

    # div containing input and button
    div {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
    }
)